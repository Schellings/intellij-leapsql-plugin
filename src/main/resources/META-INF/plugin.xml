<idea-plugin>
    <id>com.linkkou.plugin.intellij.assistant.mybaitslog</id>
    <name>MybatisLog</name>
    <vendor email="xielin@bingosoft.net" url="https://github.com:Schellings/intellij-leapsql-log">Schellings</vendor>

    <!-- 插件版本 -->
    <version>1.0.3</version>
    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="172"/>
    <!-- 插件的描述 -->
    <description><![CDATA[
      <ul>
        <h3>English:</h3>
        <li>restore with leap-sql-log-plugin</li>
        <h3>中文：</h3>
        <li>复原 leap-sql-log-plugin</li>
      </ul>
    ]]></description>

    <!-- 插件的功能 -->
    <change-notes><![CDATA[
      <ul>
        <p>1.0.0</p>
        <li> 1. 修正并修改 mybatis-log-plugin，支持解析leap sql</li>
        <li> 1. Fix and run mybatis-log-plugin,support restore with leap sql </li>
      </ul>
    ]]></change-notes>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products-->

    <!--必须为企业版-->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <consoleFilterProvider implementation="com.plugins.mybaitslog.MyBatisLogProvider"/>
        <toolWindow id="Leap Log"  icon="/icons/mybatis.png" secondary="true"  anchor="bottom"
                    factoryClass="com.plugins.mybaitslog.MyBatisLogToolWindow"/>
    </extensions>

    <actions>
        <!-- restore sql from selection -->
        <action class="com.plugins.mybaitslog.action.RestoreSqlForSelection"
                id="RestoreSqlAction"
                text="Restore Sql from Selection"
                description="Restore Sql from Selection">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="before" relative-to-action="ConsoleView.ClearAll"/>
        </action>
    </actions>
</idea-plugin>